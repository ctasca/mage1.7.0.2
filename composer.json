{
    "name": "magento/dev",
    "description": "Magento Behat extension",
    "type": "library",
    "keywords": ["behat","bdd","magento"],
    "homepage": "https://github.com/MageTest/BehatMage",
    "license": "MIT",
    "require": {
        "php": ">=5.3.0",
        "behat/behat": "2.4.*@stable",
        "behat/mink-extension": "*",
        "behat/mink-browserkit-driver": "*",
        "behat/mink-goutte-driver": ">=1.0.3",
		"behat/mink-sahi-driver": "*",
		"phpspec/php-diff": "*@dev",
        "phpspec/phpspec2": "dev-develop",
        "symfony/dependency-injection": "*",
        "symfony/config": "*",
		"symfony/css-selector":  ">=2.0.0,<2.2.0-dev",
		"magehat/magehat": "dev-develop",
		"magetest/magetest": "dev-develop"
    },
    "require-dev": {
        "phpspec/phpspec2": "dev-develop",
		"symfony/finder":   ">=2.0.0,<2.2.0-dev"
    },
	"repositories": [
        {
             "type": "vcs",
             "url": "git@github.com:ctasca/magehat.git"
        },
		{
             "type": "vcs",
             "url": "git@git.gpmd.net:thirdparty/magetest.git"
        }
    ],
    "autoload": {
        "psr-0": {
            "MageTest": "vendor/magetest/magetest/src/",
			"Magehat": "vendor/magehat/magehat/src/",
            "": [
                "vendor/magento/app",
                "vendor/magento/app/code/local",
                "vendor/magento/app/code/community",
                "vendor/magento/app/code/core",
                "vendor/magento/lib",
                "app",
                "app/code/local",
                "app/code/community",
                "app/code/core",
                "lib"
            ]
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev"
}
