{
    "name": "magetest/magento-behat-extension",
    "description": "Magento Behat extension",
    "type": "library",
    "keywords": ["behat","bdd","magento"],
    "homepage": "https://github.com/MageTest/BehatMage",
    "license": "MIT",
    "require": {
        "php": ">=5.3.0",
        "behat/behat": "2.4.4",
        "behat/mink-extension": "*",
        "behat/mink-browserkit-driver": "*",
        "behat/mink-goutte-driver": ">=1.0.3",
		"phpspec/php-diff": "*@dev",
        "phpspec/phpspec2": "dev-develop",
        "symfony/dependency-injection": "*",
        "symfony/config": "*"
    },
    "require-dev": {
        "phpspec/phpspec2": "dev-develop"
    },
    "autoload": {
        "psr-0": {
            "MageTest": "src/",
			"MageTest\\PHPSpec2\\MagentoExtension": "src",
			"Mage": "vendor/magento/app/code/core",
            "": [
                "vendor/magento/app",
                "vendor/magento/app/code/local",
                "vendor/magento/app/code/community",
                "vendor/magento/app/code/core",
                "vendor/magento/lib",
                "app",
                "app/code/local",
                "app/code/community",
                "app/code/core",
                "lib"
            ]
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Alistair Stead",
            "email": "astead@sessiondigital.com"
        },
        {
            "name": "Marcello Duarte",
            "email": "mduarte@sessiondigital.com"
        },
        {
            "name": "Sarunas Valaskevicius",
            "email": "svalaskevicius@sessiondigital.com"
        },
        {
            "name": "Daniel Kidanemariam",
            "email": "dkidanemariam@sessiondigital.com"
        },
        {
            "name": "Mark Slocock",
            "email": "mark@gpmd.co.uk"
        }
    ]
}
